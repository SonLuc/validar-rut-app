---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<meta name="description" content="Aplicacion que valida el rut con expresiones regulares">
		<meta name="keywords" content="Validar rut, validador de rut, validacion, rut, app validar rut, valida tu rut, validar rut con regex">
		<meta name="author" content="SonLuc" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="h-screen bg-gradient-to-tl from-zinc-950 to-zinc-700">
		<div class="pattern">
			<header class="absolute w-full">
				<slot name="header" />
			</header>
			<main>
				<slot name="main" />
			</main>
		</div>
	</body>
</html>
<style is:global>
	@font-face {
		font-family: 'Inter';
		src: url('/font/Inter/Inter-VariableFont_slnt\,wght.ttf');
	}
	:root{
		color-scheme: dark light;
	}
	.pattern{
		background-image: url('/pattern.svg');
		background-size: contain;
	}
</style>
